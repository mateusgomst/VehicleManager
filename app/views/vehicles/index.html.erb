<h2 class="page-title">Vehicles</h2>

<div class="actions">
    <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn-new' %>
</div>

<table class="vehicle-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
      <th>Plate</th>
      <th>Type</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td>
          <%= link_to vehicle.id, vehicle_path(vehicle), class: 'vehicle-link' %>
        </td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.kind %></td>
        <td>
          <% if vehicle.photo_url.present? %>
            <%= image_tag vehicle.photo_url, alt: "Foto do veÃ­culo", class: "vehicle-photo", width: 90, height: 67 %>
          <% else %>
            No image available
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_vehicle_path(vehicle), class: 'btn-edit' %>
          <%= button_to 'Erase', vehicle_path(vehicle), method: :delete, class: 'btn-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
